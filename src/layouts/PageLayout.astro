---
import Courtain from '@/components/shared/Courtain.astro'
import Layout from './Layout.astro'
import PageImageReveal from '@/components/shared/PageImageReveal.astro'

interface Props {
  title: string
  className?: string
  link?: string
  label?: string
  description: string
  image?: string | undefined
  border: 'border-gray-300' | 'border-gray-800'
  ld?: string
}

const { title, className, border, link, label, description, image, ld } =
  Astro.props
---

<Layout
  description={description}
  title={title}
  className={className}
  border={border}
  link={link}
  label={label}
  image={image}
  ld={ld}
>
  <main
    class='relative z-10 mt-20 flex w-screen flex-col items-center justify-around gap-10 px-10 md:mt-0 md:flex-row md:gap-32 md:px-24'
  >
    <slot />
  </main>
  <Courtain />
  <PageImageReveal />
</Layout>
