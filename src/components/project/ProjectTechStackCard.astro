---
import type { ProjectTechStack } from '@/types'

const { techStack, lang } = Astro.props
const { link, title, info } = techStack

interface Props {
  techStack: ProjectTechStack
  lang: string
}
---

<li class='flex-1 space-y-2'>
  <h3 class='font-bold md:text-lg'>{title}</h3>
  <p class='text-sm md:text-base'>
    {info}
  </p>
  <a
    href={link}
    target='_blank'
    class='hover-underline-animation text-sm font-bold'
  >
    {lang === 'es' ? 'Mas Info' : 'More Info'}
  </a>
</li>
