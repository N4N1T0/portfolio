---
import ShareSocial from '@/components/blog/ShareSocial.astro'
import Content from '@/components/shared/Content.astro'
import type { CollectionEntry } from 'astro:content'
import Subheading from '@/components/blog/Subheading.astro'

interface Props {
  blog: CollectionEntry<'blog'>
}

const { blog } = Astro.props
const content = blog.rendered
---

<Subheading blog={blog} />
<Content content={content} />
<ShareSocial />
