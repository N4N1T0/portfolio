---
import SchemeSwitcher from '@/components/layout/SchemeSwitcher.astro'
import Navigation from '@/components/layout/Navigation.astro'
import { cn } from '@/lib'

interface Props {
  link?: string
  label?: string
  className?: string
}

const { link, label, className } = Astro.props
---

<aside
  class={cn(
    'fixed bottom-0 left-0 top-0 z-50 md:flex h-full w-10 flex-col items-center justify-between px-10 opacity-0 hidden',
    className
  )}
  id='nav'
>
  <Navigation link={link} label={label} className={className} />
  <SchemeSwitcher className={className} />
</aside>
