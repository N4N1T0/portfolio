---
import Heading from '@/components/shared/Heading.astro'
import ItemList from '@/components/shared/ItemList.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { getServices } from '@/lib'
import { generateServiceListJsonLD } from '@/components/shared/jsonLD'
import type { CollectionEntry } from 'astro:content'

const allServices: CollectionEntry<'services'>[] = await getServices('en')
const ld = generateServiceListJsonLD(allServices, 'en')
---

<PageLayout
  description='Embark on a journey through my dynamic expertise, spanning web design, development, maintenance, app design, development, and SEO audit'
  title='Adrian - Services'
  className='text-gray-300'
  label='Home'
  link='/en/'
  border='border-gray-300'
  ld={ld}
>
  <Heading lang='en' page='services' />
  <ItemList list={allServices} />
</PageLayout>
